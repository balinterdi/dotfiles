# cd
alias ..='cd ..'

# heroku
alias h='heroku'

# ls
alias l="ls -lAh"
alias ls="ls -F"
alias la='ls -A'
alias ll='tree --dirsfirst -ChFupDaL 1'

# git
alias g='git'
alias gb='git branch'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gd='git diff'
alias gg='git lg'
alias gp='git push'
alias gpll='git pull'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias gst='git status -sb'

alias launchpg="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start"
# rails
alias devlog='tail -f log/development.log'
alias screenshot="ls tmp/capybara/*.png | tail -r -1 | xargs open"

# t
alias pt='python ~/code/python/t/t.py --task-dir . --list TODO'
alias pf='python ~/code/python/t/t.py --task-dir . --list FIXME'

alias repl='NODE_NO_READLINE=1 rlwrap -w-40 -p Green -C node jake console'

alias tmux="TERM=screen-256color-bce tmux"

alias letsblog="cd ~/code/balinterdi/balinterdi.com"
alias dotfiles="cd ~/code/balinterdi/dotfiles"
alias clojure="cd ~/code/clojure"
alias toolsharp="vim ~/code/balinterdi/dotfiles/toololist"

alias doky="cd ~/code/dbx/doky-ui"
alias hammy="cd ~/code/dbx/hammy-admin"

alias ideavote="cd ~/code/balinterdi/emberjs/ideavote"
alias twitter-api="cd ~/code/balinterdi/emberjs/ember-twitter-api"
alias twitter-client="cd ~/code/balinterdi/emberjs/ember-twitter-client"
alias rockandroll="cd ~/code/balinterdi/emberjs/newsletter/rock-and-roll"
alias emberjs="cd ~/code/balinterdi/emberjs/ember.js"
alias emberdata="cd ~/code/balinterdi/emberjs/data"
alias emberwebsite="cd ~/code/balinterdi/emberjs/website"

alias src="spring rails c"
